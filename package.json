{
  "name": "react-intlable",
  "version": "0.0.3",
  "description": "High order component for declarative internationalization",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "main": "./lib/index.js",
  "scripts": {
    "build:lib": "babel src --out-dir lib",
    "build:umd": "cross-env NODE_ENV=development webpack src/index.js dist/react-intlable.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.js dist/react-intlable.min.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min && node ./prepublish",
    "test": "mocha --compilers js:babel-register --timeout=7000 --recursive",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Babo-Ltd/react-intlable.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "decorator"
  ],
  "author": "Galkin Rostislav <galkinrost@gmail.com> (http://github.com/galkinrost)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Babo-Ltd/react-intlable/issues"
  },
  "homepage": "https://github.com/Babo-Ltd/react-intlable#readme",
  "devDependencies": {
    "babel-cli": "6.5.1",
    "babel-core": "6.5.1",
    "babel-loader": "6.2.2",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-object-rest-spread": "6.5.0",
    "babel-plugin-transform-react-jsx": "6.5.0",
    "babel-preset-es2015": "6.5.0",
    "cross-env": "1.0.7",
    "es3ify": "0.2.1",
    "expect": "1.14.0",
    "glob": "7.0.0",
    "jsdom": "8.0.2",
    "mocha": "2.4.5",
    "mocha-jsdom": "1.0.0",
    "react": "0.14.7",
    "react-addons-test-utils": "0.14.7",
    "react-dom": "0.14.7",
    "webpack": "1.12.13"
  },
  "dependencies": {
    "hoist-non-react-statics": "1.0.5",
    "intl-messageformat": "1.2.0"
  }
}
